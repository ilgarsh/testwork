<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="ComplexApplicationController">
  <children>
    <MenuBar>
      <menus>
        <Menu id="menuTools" mnemonicParsing="false" text="Tools">
          <items>
            <Menu mnemonicParsing="false" text="Find">
              <items>
                <MenuItem mnemonicParsing="false" fx:id="findMenuItem">
                  <graphic>
                    <GridPane>
                      <Label text="Search: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                      <TextField fx:id="textFieldSearchText" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                      <Label text="Directory: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                      <TextField fx:id="textFieldDirectory" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                      <Label text="Extension ('txt', 'log', etc): " GridPane.columnIndex="0" GridPane.rowIndex="2" />
                      <TextField fx:id="textFieldExtensionFile" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                      <Button fx:id="buttonFind" onAction="#handleButtonFind" text="Search" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="3" />
                    </GridPane>
                  </graphic>
                </MenuItem>
              </items>
            </Menu>
            <MenuItem id="menuItemQuit" mnemonicParsing="false" onAction="#handleToolsQuit" text="Quit" fx:id="toolsQuit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <SplitPane dividerPositions="0.5" focusTraversable="true" prefHeight="576.0" prefWidth="900.0">
      <items>
        <TreeView fx:id="treeView" prefHeight="400.0" prefWidth="600.0" />
        <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
          <tabs>
            <Tab text="Untitled Tab">
              <content>
                <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                    <TextArea layoutX="0.0" layoutY="0.0" prefHeight="533.0" prefWidth="445.0" wrapText="true" />
                  </children>
                </AnchorPane>
              </content>
            </Tab>
          </tabs>
        </TabPane>
      </items>
    </SplitPane>
    <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
  </children>
  <stylesheets>
    <URL value="@ComplexApplication.css" />
  </stylesheets>
</VBox>
